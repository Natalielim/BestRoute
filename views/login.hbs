<form action="/login" method="post">
    <div id="center" class="d-flex justify-content-center">
        <div class="text-center">
            <legend>Log in</legend>

            <div>
                <input type="text" name="username" id="user-username" placeholder="username">
            </div>

            <div>
                <input type="password" name="password" id="user-password" placeholder="password">
            </div>

            <div class = "center2">
                <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                <div>
                    <p>Don't have an account?
                        <a href="/users/new" style="font-weight: bold">Sign Up</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</form>